<PropertyList>

  <path>lights.ac</path>

  <animation>
    <object-name>knob</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>knob</object-name>
    <property>controls/lighting/instruments-norm[2]</property>
    <factor> -270 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

 <animation>
  <type>knob</type>
  <object-name>knob</object-name>
  
  <visible>true</visible>
  <action>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/instruments-norm[2]</property>
      <factor>0.1</factor>
      <min>0</min>
      <max>1.0</max>
      <wrap>0</wrap>
    </binding>
  </action>
  
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>lighting2-brightness</tooltip-id>
      <label>Radio Lighting: %3d%%</label>
      <property>controls/lighting/instruments-norm[2]</property>
      <mapping>percent</mapping>
    </binding>
  </hovered>
 </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>knob</object-name>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/lighting/instruments-norm[2]</property>
        <step>0.05</step>
        <min>0</min>
        <max>1</max>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/lighting/instruments-norm[2]</property>
        <step>-0.05</step>
        <min>0</min>
        <max>1</max>
      </binding>
    </action>
  </animation>

</PropertyList>
