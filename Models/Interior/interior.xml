<PropertyList>

  <path>interior.ac</path>

  <animation>
    <object-name>aux-tank</object-name>
    <object-name>canopy-int</object-name>
    <object-name>carb-heat</object-name>
    <object-name>flaps-command</object-name>
    <object-name>fuel-selector</object-name>
    <object-name>interior</object-name>
    <object-name>left-pedals</object-name>
    <object-name>light-knob1</object-name>
    <object-name>light-knob2</object-name>
    <object-name>manche</object-name>
    <object-name>parking-brake</object-name>
    <object-name>poignee-int</object-name>
    <object-name>radio-knob</object-name>
    <object-name>right-pedals</object-name>
    <object-name>throttle</object-name>
    <object-name>trim-wheel</object-name>
    <object-name>warning-lights0</object-name>
  </animation>

   <animation>
    <type>material</type>
    <texture>interior.png</texture>
    <texture-prop>interior-texture</texture-prop>
    <property-base>sim/model/livery</property-base>
    <object-name>aux-tank</object-name>
    <object-name>canopy-int</object-name>
    <object-name>carb-heat</object-name>
    <object-name>flaps-command</object-name>
    <object-name>fuel-selector</object-name>
    <object-name>interior</object-name>
    <object-name>left-pedals</object-name>
    <object-name>light-knob1</object-name>
    <object-name>light-knob2</object-name>
    <object-name>manche</object-name>
    <object-name>parking-brake</object-name>
    <object-name>poignee-int</object-name>
    <object-name>radio-knob</object-name>
    <object-name>right-pedals</object-name>
    <object-name>throttle</object-name>
    <object-name>trim-wheel</object-name>
    <object-name>warning-lights0</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>aux-tank</object-name>
    <object-name>canopy-int</object-name>
    <object-name>carb-heat</object-name>
    <object-name>flaps-command</object-name>
    <object-name>fuel-selector</object-name>
    <object-name>interior</object-name>
    <object-name>left-pedals</object-name>
    <object-name>light-knob1</object-name>
    <object-name>light-knob2</object-name>
    <object-name>manche</object-name>
    <object-name>parking-brake</object-name>
    <object-name>poignee-int</object-name>
    <object-name>radio-knob</object-name>
    <object-name>right-pedals</object-name>
    <object-name>throttle</object-name>
    <object-name>trim-wheel</object-name>
    <object-name>warning-lights0</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   0.002 </red>
      <green> 0.002 </green>
      <blue>  0.002 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <!-- Rudder -->
  <animation>
    <type>rotate</type>
    <object-name>left-pedals</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m> -1.9835 </x-m>
      <y-m>  0.0000 </y-m>
      <z-m> -0.2732 </z-m>
    </center>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>right-pedals</object-name>
    <property>controls/flight/rudder</property>
    <factor>-20</factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m> -1.9835 </x-m>
      <y-m>  0.0000 </y-m>
      <z-m> -0.2732 </z-m>
    </center>
  </animation>

  <!-- Canopy -->
  <animation>
    <type>translate</type>
    <object-name>canopy-int</object-name>
    <object-name>poignee-int</object-name>
    <property>canopy/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 0.12 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 0.80 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>poignee-int</object-name>
    <property>canopy/position-norm</property>
    <interpolation>
      <entry><ind>  0.00 </ind><dep>  0.00 </dep></entry>
      <entry><ind>  0.12 </ind><dep> 45.00 </dep></entry>
      <entry><ind>  1.00 </ind><dep> 45.00 </dep></entry>
    </interpolation>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
    <center>
      <x-m> -1.27804 </x-m>
      <y-m>  0.008921 </y-m>
      <z-m>  0.000 </z-m>
    </center>
  </animation>

  <!-- Yoke -->
  <animation>
    <type>rotate</type>
    <object-name>manche</object-name>
    <property>controls/flight/aileron</property>
    <factor>1.000000</factor>
    <center>
      <x-m> -1.5959 </x-m>
      <y-m>  0.0018 </y-m>
      <z-m> -0.2736 </z-m>
    </center>
    <axis>
      <x>1.0000</x>
      <y>0.0000</y>
      <z>0.0000</z>
    </axis>
    <interpolation>
      <entry>
        <ind>-1.0000</ind><dep>13.3930</dep>
      </entry>
      <entry>
        <ind>1.0000</ind><dep>-13.3930</dep>
      </entry>
    </interpolation>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>manche</object-name>
    <property>controls/flight/elevator</property>
    <factor>1.000000</factor>
    <center>
      <x-m> -1.5959 </x-m>
      <y-m>  0.0018 </y-m>
      <z-m> -0.2736 </z-m>
    </center>
    <axis>
      <x>0.0000</x>
      <y>0.9848</y>
      <z>0.1739</z>
    </axis>
    <interpolation>
      <entry>
        <ind>1.0000</ind><dep>-19.5869</dep>
      </entry>
      <entry>
        <ind>-1.0000</ind><dep>19.7054</dep>
      </entry>
    </interpolation>
  </animation>

  <animation>
    <type>select</type>
    <object-name>manche</object-name>
    <condition>
      <property>sim/model/config/show-yokes</property>
    </condition>
  </animation>

  <!-- Trims wheel -->
  <animation>
    <type>slider</type>
    <object-name>trim-wheel</object-name>
    <drag-direction>vertical</drag-direction>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator-trim</property>
        <factor>0.01</factor>
        <min>-1</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <label>Elevator trim: %3.2f</label>
        <tooltip-id>pitch-trim</tooltip-id>
        <property>controls/flight/elevator-trim</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>trim-wheel</object-name>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator-trim</property>
        <step>0.01</step>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator-trim</property>
        <step>-0.01</step>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>trim-wheel</object-name>
    <property>controls/flight/elevator-trim</property>
    <factor>-180</factor>
    <center>
      <x-m> -1.6582 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.1333 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- Parking brake -->
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>parking-brake</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/gear/brake-parking</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>brake-parking-switch</tooltip-id>
        <label>Brake parking: %s</label>
        <mapping>on-off</mapping>
        <property>controls/gear/brake-parking</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>parking-brake</object-name>
    <property>controls/gear/brake-parking-pos</property>
    <factor> -0.015 </factor>
    <axis>
     <x1-m> -0.003508 </x1-m>
     <y1-m>  0.000000 </y1-m>
     <z1-m> -0.001518 </z1-m>
     <x2-m> -0.035240 </x2-m>
     <y2-m>  0.000000 </y2-m>
     <z2-m> -0.012840 </z2-m>
    </axis>
  </animation>

  <!-- Carburator heat -->
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>carb-heat</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>controls/anti-ice/engine/carb-heat</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>carb-heat-switch</tooltip-id>
        <label>Carb heat: %s</label>
        <mapping>on-off</mapping>
        <property>controls/anti-ice/engine/carb-heat</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>carb-heat</object-name>
    <property>controls/anti-ice/engine/carb-heat-pos</property>
    <factor> -0.015 </factor>
    <axis>
     <x1-m> -1.89851 </x1-m>
     <y1-m>  0.00000 </y1-m>
     <z1-m>  0.11888 </z1-m>
     <x2-m> -1.95096 </x2-m>
     <y2-m>  0.00000 </y2-m>
     <z2-m>  0.10998 </z2-m>
    </axis>
  </animation>


  <!-- Flaps handle -->
  <animation>
    <type>rotate</type>
    <object-name>flaps-command</object-name>
    <object-name>flapsUp</object-name>
    <object-name>flapsDown</object-name>
    <object-name>textosgFlaps</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>45</factor>
    <center>
      <x-m> -1.2436 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.1589 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>flapsUp</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.flapsDown(1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.flapsDown(0)</script>
        </binding>
      </mod-up>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>flaps-switch</tooltip-id>
        <label>Flaps: %s °</label>
        <property>controls/flight/flaps</property>
        <mapping>nasal</mapping>
        <script>
          var f = getprop("/controls/flight/flaps");
          if ( f == 0.25 ) return '15';
          if ( f == 1.00 ) return '60';
          return '0';
        </script>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>flapsDown</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.flapsDown(-1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.flapsDown(0)</script>
        </binding>
      </mod-up>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>flaps-switch</tooltip-id>
        <label>Flaps: %s °</label>
        <property>controls/flight/flaps</property>
        <mapping>nasal</mapping>
        <script>
          var f = getprop("/controls/flight/flaps");
          if ( f == 0.25 ) return '15';
          if ( f == 1.00 ) return '60';
          return '0';
        </script>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Ball</object-name>
    <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
    <center>
      <x-m> -1.7988 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.5676 </z-m>
    </center> 
    <axis>
     <x> 0.0 </x>
     <y> 0.0 </y>
     <z> 1.0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>poignee-int</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>dr400.canopy.toggle();</script>
      </binding>
    </action>
  </animation>

  <!-- Manette des gazs -->
  <animation>
    <type>translate</type>
    <object-name>throttle</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 0.097 </factor>
    <axis>
     <x1-m> 0.20770 </x1-m>
     <y1-m> 0.00000 </y1-m>
     <z1-m> 0.01000 </z1-m>
     <x2-m> 0.09690 </x2-m>
     <y2-m> 0.00000 </y2-m>
     <z2-m> 0.00560 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>slider</type>
    <object-name>throttle</object-name>
    <drag-direction>vertical</drag-direction>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/throttle</property>
        <factor>0.05</factor>
        <min>0</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <label>Throttle: %3d%%</label>
        <measure-text>Throttle: 100%</measure-text>
        <tooltip-id>throttle</tooltip-id>
        <mapping>percent</mapping>
        <property>controls/engines/engine[0]/throttle</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>throttle</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.05</interval-sec>
      <binding>
        <command>property-assign</command>
        <property>controls/throttle-coupled</property>
        <value>0</value>
      </binding>
      <binding>
        <command>nasal</command>
        <script>dr400.set_levers("throttle",0,-1,1);</script>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>controls/throttle-coupled</property>
          <value>1</value>
        </binding>
      </mod-up>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>throttleUp</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/engines/engine[0]/throttle</property>
        <step type="double">0.05</step>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <label>Throttle: %3d%%</label>
        <measure-text>Throttle: 100%</measure-text>
        <tooltip-id>throttle</tooltip-id>
        <mapping>percent</mapping>
        <property>controls/engines/engine[0]/throttle</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>throttleDown</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/engines/engine[0]/throttle</property>
        <step type="double">-0.05</step>
      </binding>          
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <label>Throttle: %3d%%</label>
        <measure-text>Throttle: 100%</measure-text>
        <tooltip-id>throttle</tooltip-id>
        <mapping>percent</mapping>
        <property>controls/engines/engine[0]/throttle</property>
      </binding>
    </hovered>
  </animation>

