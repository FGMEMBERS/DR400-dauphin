# April 2012 : Modified by PAF team
# http://equipe-flightgear.forumactif.com

Christian Thiriot: Sons modifiés sur base de sons réels de moteur Lycoming (Janv 2012)

##########################################-->

<PropertyList>

  <fx>
    <crank>
      <name>engstart</name>
      <path>Aircraft/DR400-dauphin/Sounds/starter.wav</path>
      <property>engines/engine/cranking</property>
      <volume>
        <offset>-0.6</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <crank>
      <name>crank</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/starter.wav</path>
      <condition>
        <property>engines/engine/cranking</property>
        <not>
          <property>engines/engine/running</property>
        </not>
      </condition>
      <volume>
        <offset>0.9</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <crank>
      <name>cough</name>
      <path>Aircraft/DR400-dauphin/Sounds/lancement.wav</path>
      <property>engines/engine/running</property>
      <volume>
        <offset>0.2</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <engine>
      <name>engine</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/engine.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>60</value>
          </greater-than>
          <or>
            <greater-than>
              <property>instrumentation/doors/crew/position-norm</property>
              <value>0</value>
            </greater-than>
            <not>
              <property>sim/current-view/internal</property>
            </not>
          </or>
        </and>
      </condition>
      <volume>
        <property>engines/engine/mp-osi</property>
        <factor>0.00375</factor>
        <min>0.5</min>
        <max>2.0</max>
      </volume>
      <pitch>
        <property>engines/engine/rpm</property>
        <factor>0.0005</factor>
        <min>0.2</min>
        <max>2.0</max>
        <offset>0.15</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <engine-internal>
      <name>engine-internal</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/engine-internal.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>60</value>
          </greater-than>
          <not>
            <greater-than>
              <property>instrumentation/doors/crew/position-norm</property>
              <value>0</value>
            </greater-than>
          </not>
        </and>
      </condition>
      <pitch>
        <property>engines/engine/rpm</property>
        <factor>0.0005</factor>
        <min>0.2</min>
        <max>2.0</max>
        <offset>0.15</offset>
      </pitch>
      <reference-dist>4.0</reference-dist>
      <max-dist>10.0</max-dist>
      <position>
        <x> -2.672 </x>
        <y>  0 </y>
        <z>  0 </z>
      </position>
    </engine-internal>

    <propeller>
      <name>propeller</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/prop.wav</path>
      <condition>
        <greater-than>
          <property>engines/engine/rpm</property>
          <value>60</value>
        </greater-than>
        <not>
          <and>
            <equals>
              <property>instrumentation/doors/crew/position-norm</property>
              <value>0</value>
            </equals>
            <property>sim/current-view/internal</property>
          </and>
        </not>
      </condition>
      <pitch>
        <property>/engines/engine/mp-osi</property>
        <factor>0.0036</factor>
        <min>0.5</min>
        <max>2.0</max>
        <offset>0.9</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </propeller>

    <stop>
      <name>stop</name>
      <path>Aircraft/DR400-dauphin/Sounds/shutdown.wav</path>
      <condition>
        <and>
          <property>/engines/engine/has-been-started-at-least-once</property>
          <not>
            <property>/engines/engine/running</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>/sim/current-view/internal</property>
        <factor>2.0</factor>
        <offset>1.0</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
      <position>
        <x> -2.627 </x>
        <y>  1.740 </y>
        <z>  0.021 </z>
      </position>
    </stop>  

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Sounds/rumble.wav</path>
      <condition>
        <and>
          <or>
            <property>gear/gear[0]/wow</property>
            <property>gear/gear[1]/wow</property>
            <property>gear/gear[2]/wow</property>
          </or>
          <or>
            <greater-than>
              <property>gear/gear[0]/rollspeed-ms</property>
              <value>1</value>
            </greater-than>
            <greater-than>
              <property>gear/gear[1]/rollspeed-ms</property>
              <value>1</value>
            </greater-than>
            <greater-than>
              <property>gear/gear[2]/rollspeed-ms</property>
              <value>1</value>
            </greater-than>
          </or>
        </and>
      </condition>
      <volume>
        <property>velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.5</factor>
        <max>2.5</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>

    <squeal>
      <name>squeal</name>
      <path>Sounds/squeal.wav</path>
      <condition>
        <or>
          <property>gear/gear[0]/wow</property>
          <property>gear/gear[1]/wow</property>
          <property>gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <min>0.2</min>
        <max>1.0</max>
      </volume>
      <volume>
        <internal>dt_stop</internal>
        <factor>0.05</factor>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>1.2</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>

    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/DR400-dauphin/Sounds/flaps.wav</path>
      <property>surface-positions/flap-pos-norm</property>
      <volume>
        <factor>5</factor>
      </volume>
      <reference-dist>10.0</reference-dist>
      <max-dist>100.0</max-dist>
    </flap>

    <stall>
      <name>stall</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/stall.wav</path>
      <condition>
        <and>
          <property>controls/electric/battery-switch</property>
          <less-than>
            <property>velocities/airspeed-kt</property>
            <value>46</value>
          </less-than>
          <not>
            <property>gear/gear[0]/wow</property>
            <property>gear/gear[1]/wow</property>
            <property>gear/gear[2]/wow</property>
          </not>
        </and>
      </condition>
      <reference-dist>4.0</reference-dist>
      <max-dist>10.0</max-dist>
    </stall>

    <!-- Alarme sonore niveau critique carburant -->
    <stall>
      <name>Alarme-carburant</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/alarme_fuel.wav</path>
      <condition>
        <and>
          <equals>
            <property>consumables/fuel/fuel-low</property>
            <value>2</value>
          </equals>
          <greater-than>
            <property>systems/electrical/volts</property>
            <value>8</value>
          </greater-than>
        </and>
      </condition>  
      <volume>
        <factor>1.0</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>      
    </stall>

    <!-- Pompe fuel -->
    <pump>
      <name>Pompe fuel</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/pompe_fuel.wav</path>
      <condition>
        <greater-than>
          <property>systems/electrical/outputs/fuel-pump</property>
          <value>8</value>
        </greater-than>
      </condition>    
      <volume>
        <factor>2.0</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>      
    </pump>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/DR400-dauphin/Sounds/wind.wav</path>
      <property>velocities/airspeed-kt</property>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.005</factor>
        <max>1.5</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.005</factor>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </wind>            

    <!-- Toggle Switches -->
    <click>
      <name>Clickon</name>
      <path>Aircraft/DR400-dauphin/Sounds/click.wav</path>
      <condition>
        <or>
          <property>sim/model/click</property>
          <property>instrumentation/garmin196/status</property>
        </or>
      </condition>
      <volume>
        <factor>2.0</factor>
      </volume>
    </click>

    <click>
      <name>Clickoff</name>
      <path>Aircraft/DR400-dauphin/Sounds/click.wav</path>
      <condition>
        <not>
          <property>sim/model/click</property>
          <property>instrumentation/garmin196/status</property>
        </not>
      </condition>
      <volume>
        <factor>2.0</factor>
      </volume>
    </click>

    <!-- Frein parc -->
    <click>
      <name>frein parc on</name>
      <path>Aircraft/DR400-dauphin/Sounds/tirette.wav</path>
      <condition>
        <property>controls/gear/brake-parking</property>
      </condition>    
      <volume>
        <factor>2.0</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>      
    </click>

    <click>
      <name>frein parc off</name>
      <path>Aircraft/DR400-dauphin/Sounds/tirette.wav</path>
      <condition>
        <not>
          <property>controls/gear/brake-parking</property>
        </not>
      </condition>    
      <volume>
        <factor>2.0</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>      
    </click>

    <squish>
      <name>Primer Out</name>
      <path>Sounds/squeal.wav</path>
      <condition>
        <property>controls/engines/engine/primer-pump</property>
      </condition>
      <volume>
        <factor>0.1</factor>
      </volume>
    </squish>

    <squish>
      <name>Primer In</name>
      <path>Sounds/squeal.wav</path>
      <condition>
        <not>
          <property>controls/engines/engine/primer-pump</property>
        </not>
      </condition>
      <volume>
        <factor>0.1</factor>
      </volume>
    </squish>
  </fx>
</PropertyList>
